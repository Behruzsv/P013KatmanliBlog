@model IEnumerable<Post>


@foreach (var item in Model)
{
    <div class="card mb-4">
        <a href="#!"><img class="card-img-top" src="/Img/@item.ImageUrl" alt="..."></a>
        <div class="card-body">
            <div class="small text-muted">@item.CreateDate</div>
            <h2 class="card-title h4">@item.Title</h2>
            <p class="card-text">@item.Comments</p>
            <a class="btn btn-primary" href="/Posts/Detail/@item.Id">İncele →</a>
        </div>
    </div>
}
